@model IEnumerable<Common.Role>

@{
    ViewBag.Title = "rolesIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Roles Management</h2>

<p>
    @Html.ActionLink("Create New Role ", "CreateRole", "User")
</p>
<table>
    <tr>
        <th>
            Role 
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.HiddenFor(modelItem => item.RoleID)
            @Html.DisplayFor(modelItem => item.RoleName)
        </td>
        <td>
            @Html.ActionLink("Edit Role ", "EditRole", "User", new { roleID = item.RoleID }, null) |

            @Html.ActionLink("Delete Role", "deleteRole", "User", new { id = item.RoleID }, new { onclick = "return confirm('Are you sure you want to delete role: " + @item.RoleID + " ?');" })
        </td>
    </tr>
}

</table>
